= form_for @sight do |f|
  - if @sight.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sight.errors.count, "error")} prohibited this sight from being saved:"
      %ul
        - @sight.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title_fa
    = f.text_field :title_fa
  .field
    = f.label :title_en
    = f.text_field :title_en
  .field
    = f.label :title_ar
    = f.text_field :title_ar
  .field
    = f.label :text_fa
    = f.text_area :text_fa
  .field
    = f.label :text_en
    = f.text_area :text_en
  .field
    = f.label :text_ar
    = f.text_area :text_ar
  .actions
    = f.submit 'Save'
