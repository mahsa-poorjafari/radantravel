.margin3  
  %h1{:class => I18n.locale}= 'نقاط دیدنی'
  -if is_admin?
    = link_to 'معرفی جاذبه دیدنی جدید', new_sight_path, :class => "btn btn-success"
  .show-tours.col-xs-12.set-center
    - @sights.each_with_index do |sight|
      .tours-index
        = link_to sight, :class => "tour-box" do
          %h5.tour-title= sight.title
          - if sight.photos.present?
            .tour-sample-image= image_tag sight.photos.first.image(:medium), :id => "tour-sample-image-" + sight.photos.first.id.to_s
          .clear-float
  
        -if is_admin?
          .admin-btn-tour
            = link_to 'ویرایش ', edit_sight_path(sight), :class => "btn btn-info"
            = link_to 'مشاهده جزئیات', sight, :class => "btn btn-warning"       
            = link_to 'حذف ', sight, :method => :delete, :data => { :confirm => 'آیا می خواهید این تور را حذف کنید؟' }, :class => "btn btn-danger"
        
      
      
      
     
