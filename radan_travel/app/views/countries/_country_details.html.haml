-@countries.each do  |country|
  .tab-pane.fade.in.country-details{:role => "tabpanel", :id => 'country'+country.id.to_s}    
    - if is_admin?      
      = link_to 'ویرایش', edit_country_path(country), :class => "btn btn-info", :title => "آژانس_هواپیمایی_رادان_سیر"
    
    .country-show{:class => I18n.locale}
      %h2= country.title
      .col-xs-5.set-center.margin-bottom
        - if country.photos.present?
          = image_tag country.photos.first.image(:medium),  :title => "آژانس_هواپیمایی_رادان_سیر" , :alt => "آژانس_هواپیمایی_رادان_سیر", :id => "country-photos-" + country.photos.first.id.to_s
      .col-xs-7.country-text.margin-bottom{:class => I18n.locale}        
        %div{:class => I18n.locale}= raw country.text
        .country-cities-list
          %h2{:class => I18n.locale}= t('city') 
          %ul{:style => "list-style:circle", :title => "آژانس_هواپیمایی_رادان_سیر"}
            - country.cities.each do |city|        
              %li= link_to  city.title, city, :title => "آژانس_هواپیمایی_رادان_سیر"+ "_" + city.title_fa, :id => "city-"+city.id.to_s, :class => I18n.locale
    
    
