-@countries.each do  |country|
  .tab-pane.fade.in.country-details{:role => "tabpanel", :id => 'country'+country.id.to_s}    
    - if is_admin?      
      = link_to 'ویرایش', edit_country_path(country), :class => "btn btn-info"
    .clear-float
    .col-xs-5
      = image_tag country.photos.first.image(:medium)
    .country-show{:class => I18n.locale}
      .col-xs-6.country-text{:class => I18n.locale}
        %h2= country.title
        = raw country.text
      .col-xs-6
        %h2= t('city') 
        - country.cities.each do |city|        
          = link_to  city.title, city
    
    
