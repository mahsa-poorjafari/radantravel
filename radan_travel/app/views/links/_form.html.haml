= form_for @link do |f|
  - if @link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
      %ul
        - @link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title_fa
    = f.text_field :title_fa
  .field
    = f.label :title_en
    = f.text_field :title_en
  .field
    = f.label :title_ar
    = f.text_field :title_ar
  .field
    = f.label :web_site
    = f.text_field :web_site
  .actions
    = f.submit 'Save'
