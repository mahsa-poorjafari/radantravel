.margin3.fa     
  %h1{:class => I18n.locale}= 'افزودن محل برای تور  '
  %h2{:class => I18n.locale}= link_to @tour.title, tour_url(@tour.title)
  -if flash[:AddLoc]        
    .alert.alert-success= flash[:AddLoc]    
  - elsif flash[:error]        
    .alert.alert-warning= flash[:error]
  .col-xs-12.well   
    = render 'form'

.col-xs-12
  %table.table
    %thead
      %tr
        %th= t('location.row')
        %th= t('location.hotel-name')
        %th= t('location.hotel-star')
        %th= t('location.two_bed')
        %th= t('location.one_bed')
        %th= t('location.three_bed')
        %th= t('location.kid_and_bed')
        %th= t('location.kid_no_bed')
        %th= t('location.description')
        %th= 'عملیات'      
    %tbody
      - if @tour.present?
        - @tour.locationtours.each_with_index do |location, i|        
          %tr{:class => I18n.locale}
            %td= (i+1)
            -if location.hotels.collect(&:title_fa).present?
              %td
                - location.hotels.each do |hotel|
                  %span= hotel.title_fa + ','                  
            - if location.custom_hotel.present?
              %td                
                %p{:style => "text-align:center"}=  location.custom_hotel
              %td
                - if location.hotels.present?
                  - if location.hotels.first.class_hotel.present?
                    = location.hotels.first.class_hotel.title
                
            %td= location.price_two_bed
            %td= location.price_one_bed
            %td= location.price_three_bed
            %td= location.price_kid_and_bed
            %td= location.price_kid_without_bed
            %td= location.description
            %td 
              - if is_admin?
                =link_to 'ویرایش', edit_locationtour_path(location, :tour_id => @tour.id), :class => "btn btn-info"
                = link_to 'حذف', location, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger"
