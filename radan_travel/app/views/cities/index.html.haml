%h1 لیست شهرها
-if is_admin?
  = link_to 'تعریف شهر جدید', new_city_path, :class => "admin-link"
%table.table
  %tr
    %th ردیف
    %th نام شهر
    %th کشور مربوط        
    %th     
    %th عملیات

  - @cities.each_with_index do |city, i|
    %tr
      %td= (i+1)
      %td= city.title      
      %td= city.country.title
      %td= image_tag city.photos.first.image(:small)
      %td 
        -if is_admin?
          = link_to 'مشاهده', city
          = link_to 'ویرایش', edit_city_path(city)
          = link_to 'حذف', city, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }




