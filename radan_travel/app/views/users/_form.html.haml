= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .row  
    .col-xs-12      
      .col-xs-6
        .form-group
          = f.label ':نام کاربری', :class => "control-label"
          = f.text_field :user_name, :class => "form-control"
        .form-group
          = f.label 'ایمیل:', :class => "control-label"
          = f.text_field :email, :class => "form-control"
        
        .form-group
          = f.label 'نقش کاربر', :class => "control-label"
          = f.select :role_id, options_for_select(Role.all.collect{ |u| [u.title, u.id] }), prompt: "نقش کاربری را انتخاب کنید"
        .form-group
          = f.submit 'ثبت', :class => "btn btn-primary"
    
