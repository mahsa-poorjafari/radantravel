= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_name
    = f.text_field :user_name
  .field
    = f.label 'نقش کاربر'
    = f.select :role_id, options_for_select(Role.all.collect{ |u| [u.title, u.id] }), prompt: "نقش کاربری را انتخاب کنید"
  .actions
    = f.submit 'Save'
