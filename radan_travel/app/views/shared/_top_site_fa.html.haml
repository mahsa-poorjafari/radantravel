.title-site.col-xs-4{:class => I18n.locale, :style => "float:right"}
  = t('radantravel')
    
.col-xs-4#logo-site{:class => I18n.locale, :style => "float:right"}            
  = link_to :controller => "/static", :action => :index, :title => "آژانس_هواپیمایی_رادان_سیر" do
    = image_tag 'menu_logo.png'            
.col-xs-4#contact-info{:class => I18n.locale, :style => "float:right"}            
  .col-xs-6
    .flag_bar
      = link_to (image_tag 'flag/en_sm.png'), locale: :en, :title => "آژانس_هواپیمایی_رادان_سیر"
      = link_to (image_tag 'flag/ir_sm.png'), locale: :fa, :title => "آژانس_هواپیمایی_رادان_سیر"
      = link_to (image_tag 'flag/ar_sm.png'), locale: :ar, :title => "آژانس_هواپیمایی_رادان_سیر"
    .contact-top-site
      %p{:class => I18n.locale}
        %span= t('contact-us')
        %span= image_tag 'phone-icon.png'
      %p{:class => I18n.locale}= t('phone')
      %p{:class => I18n.locale, :style => 'font-size:12px'}        
        %p= 'info@radantravel.com'

    
