
%fieldset
  %legend
    %span.contact{:class => I18n.locale}= t('msg.contact-title')
       
    
= form_for @message ||= Message.new do |f|
  - if @message.errors.any?
    #error_explanation
      %ul
        - @message.errors.each do |attr, msg|
          %li= msg
  
      
  -if flash[:msgsend]        
    .alert.alert-success= flash[:msgsend]
      
  .col-xs-12
    .form-group.col-xs-6    
      %span.Necessary= t('msg.Required')
      = f.text_field :user_name, :placeholder => t('msg.contact-name') , :id => "contact-name", :style => "width:100%", :title => "آژانس هواپیمایی رادان سیر"   , :class => "form-control"
    
    .form-group.col-xs-6    
      %span.Necessary=  t('msg.Required')
      = f.text_field :phone, :placeholder => t('msg.contact-phone'), :id => "contact-phone", :style => "width:100%", :title => "آژانس هواپیمایی رادان سیر", :class => "form-control"
  .col-xs-12  
    .form-group.col-xs-6
      %span.Necessary=  t('msg.Required')
      = f.text_area :text, :placeholder => t('msg.contact-msg'), :id => "contact-text", :style => "resize: none; width:100%", rows: 4, :title => "آژانس هواپیمایی رادان سیر"    , :class => "form-control"
    .col-xs-6
      .form-group
        %span.Necessary= t('msg.Required')
        = f.text_field :email, :placeholder => t('msg.contact-email'), :id => "contact-email", :style => "width:100%", :title => "آژانس هواپیمایی رادان سیر", :class => "form-control"      
      %div  
        .form-group.col-xs-6
          = button_tag t('msg.contact-reset'), :type => 'reset', :title => "آژانس هواپیمایی رادان سیر", :id => "contact-reset"  , :class => "btn btn-default I18n.locale"
        .form-group.col-xs-6
          = f.submit t('msg.contact-btn'), :title => "آژانس هواپیمایی رادان سیر", :id => "contact-submit", :class => "btn btn-default I18n.locale"
        
        


:javascript 
  $(function() { 
    $(':submit#contact-submit').click(function(e) {
      $(':text#contact-name,:text#contact-phone, :text#contact-email, textarea#contact-text').each(function() {
        if ($(this).val().length == 0) {
          $(this).css('border', '2px solid red');
          e.preventDefault();
        }
      });
    });
  });
