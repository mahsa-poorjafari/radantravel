  #reserv.col-xs-8.pull-left.link-reservation
    .reserv-box.pull-right{:class => I18n.locale}    
      %span= image_tag 'reserv-plane.png'
      %span{:class => I18n.locale, :style => "margin-bottom:12%"}= t('plane-reserv') 
    .col-xs-8
      = form_tag 'http://sepehr.radantravel.com/Systems/Login.aspx', :method => "get", id: "frmLogin", :onsubmit => "return(hash('frmLogin'))", :defaultbutton => "btnLogin", :target => "_blank" do 

        = submit_tag t('reserv-login'), :name => nil, :id => "reserv-submit" , :class => "btn"
        = label_tag t('reserv-type')
        = select_tag params[:IsPublicLogin],  options_for_select([[t('user'),'true'], [t('agent'),'false']])
        = label_tag t('reserv-lang')
        = select_tag params[:Language], options_for_select([[t('reserv-fa'), 'FA'], [t('reserv-en'), 'EN'], [t('reserv-ar'), 'AR']])                
        
        
