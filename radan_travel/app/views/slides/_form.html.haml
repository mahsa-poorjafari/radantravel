= form_for @slide do |f|
  - if @slide.errors.any?
    #error_explanation      
      %ul
        - @slide.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label 'توضیحات به فارسی'
    = f.text_field :text_fa
  .field
    = f.label 'توضیحات به انگلیسی'
    = f.text_field :text_en
  .field
    = f.label 'توضیحات به عربی'
    = f.text_field :text_ar
  .field
    = f.label 'تصویر'
    = f.file_field :image
  .actions
    = f.submit 'ثبت', :class => "btn"
