= nested_form_for @tour, :html => { :multipart => true  } do |f|
  - if @tour.errors.any?
    #error_explanation
      
      %ul
        - @tour.errors.each do |attr, msg|
          %li= msg
  .margin3
    .col-xs-12
      .col-xs-7
        = f.fields_for :photos do |picture|  
          = render "shared/upload_image_form", :picture => picture
  
        .form-group
          = f.label "برای افزودن تصاویر برای این پروژه دکمه زیر را فشار دهید و در کادری که نمایش داده می شود تصویر مورد نظر را انتخاب کنید:", :class => "control-label"
          = f.label "دقت داشته باشید حجم هر عکس باید کمتر از ۵۰۰کیلوبایت باشد.", :class => "control-label", :style=> "color:#ec523f"
          = f.link_to_add content_tag(:span, "افزودن تصویر", :class => "btn btn-warning" ), :photos, :id => "add_new_picture", :class => "btn"
      .col-xs-5
        .form-group
          = f.label 'عنوان فارسی', :class => "control-label"
          = f.text_field :title_fa, :class => "form-control"
        .form-group
          = f.label 'عنوان انگلیسی', :class => "control-label"
          = f.text_field :title_en, :class => "form-control"
        .form-group
          = f.label 'عنوان عربی', :class => "control-label"
          = f.text_field :title_ar, :class => "form-control"
        .clear-float
        .form-group
          = f.label 'پرواز', :class => "control-label"
          = f.select :plane_id, options_for_select(Plane.all.collect{ |u| [u.title_fa, u.id] }), prompt: "پرواز را انتخاب کنید", :class => "form-control"
        .clear-float
        .form-group
          = f.label 'نام هتل', :class => "control-label"
          = f.select :hotel_id, options_for_select(Hotel.all.collect{ |u| [u.title_fa, u.id] }), prompt: "هتل را انتخاب کنید", :class => "form-control"         
        .clear-float
        .form-group
          = f.label 'نام کشور', :class => "control-label"
          = f.select :country_id, options_for_select(Country.all.collect{ |u| [u.title_fa, u.id] }), prompt: "کشور را نتخاب کنید", :class => "form-control"
        .clear-float  
        .form-group
          = f.label 'نام شهر', :class => "control-label"
          = f.select :city_id, options_for_select(City.all.collect{ |u| [u.title_fa, u.id] }), prompt: "شهر را انتخاب کنید", :class => "form-control"
          
        .clear-float 
        .form-group
          = f.label 'تاریخ اعتبار از', :class => "control-label"
          = f.text_field :validate_date_from_fa, :class => "fa_date"
        .form-group
          = f.label 'الی', :class => "control-label"
          = f.text_field :validate_date_until_fa, :class => "fa_date"
        .form-group
          = f.label t('tour-price'), :class => "control-label"
          = f.text_field :price, :class => "form-control"
        .form-group
          = f.label 'بزودی', :class => "control-label"
          = f.check_box :coming_soon, :class => "form-control"
    .col-xs-12
      %h2= 'برنامه سفر'
      .form-group.editor
        = f.label 'متن فارسی', :class => "control-label"
        = f.text_area :itinerary_fa, :class => "ckeditor"
      .form-group.editor
        = f.label 'متن انگلیسی', :class => "control-label"
        = f.text_area :itinerary_en, :class => "ckeditor"
      .form-group.editor
        = f.label 'متن عربی', :class => "control-label"
        = f.text_area :itinerary_ar, :class => "ckeditor"
    .col-xs-12
      %h2= 'مدارک مورد نیاز'
      .form-group.editor
        = f.label 'متن فارسی', :class => "control-label"
        = f.text_area :documents_fa, :class => "ckeditor"
      .form-group.editor
        = f.label 'متن انگلیسی', :class => "control-label"
        = f.text_area :documents_en, :class => "ckeditor"
      .form-group.editor
        = f.label 'متن عربی', :class => "control-label"
        = f.text_area :documents_ar, :class => "ckeditor"
    .col-xs-12
      %h2= 'توضیحات تکمیلی'
      .form-group.editor
        = f.label 'متن فارسی', :class => "control-label"
        = f.text_area :description_fa, :class => "ckeditor"
      .form-group.editor
        = f.label 'متن انگلیسی', :class => "control-label"
        = f.text_area :description_en, :class => "ckeditor"
      .form-group.editor
        = f.label 'متن عربی', :class => "control-label"
        = f.text_area :description_ar, :class => "ckeditor"
    .col-xs-12
      .form-group
        = f.submit 'ثبت', :class => "btn btn-primary"
  
:javascript
  $('.fa_date').datepicker()
