
= nested_form_for @tour, :html => { :multipart => true  } do |f|
  - if @tour.errors.any?
    #error_explanation
      
      %ul
        - @tour.errors.each do |attr, msg|
          %li= msg
  .row-fluid    
    .span12
      .span7
        = f.fields_for :photos do |picture|  
          = render "shared/upload_image_form", :picture => picture
  
        .field
          = f.label "برای افزودن تصاویر برای این پروژه دکمه زیر را فشار دهید و در کادری که نمایش داده می شود تصویر مورد نظر را انتخاب کنید:", :class => "control-label"
          = f.label "دقت داشته باشید حجم هر عکس باید کمتر از ۵۰۰کیلوبایت باشد.", :class => "control-label", :style=> "color:#ec523f"
          = f.link_to_add content_tag(:span, "افزودن تصویر"), :photos, :id => "add_new_picture", :class => "btn"
      .span5
        .field
          = f.label 'عنوان فارسی'
          = f.text_field :title_fa
        .field
          = f.label 'عنوان انگلیسی'
          = f.text_field :title_en
        .field
          = f.label 'عنوان عربی'
          = f.text_field :title_ar
    .span12
      .span4
        .field
          = f.label 'پرواز'
          = f.select :plane_id, options_for_select(Plane.all.collect{ |u| [u.title_fa, u.id] }), prompt: "پرواز را انتخاب کنید"
          
        .field
          = f.label 'نام هتل'
          = f.select :hotel_id, options_for_select(Hotel.all.collect{ |u| [u.title_fa, u.id] }), prompt: "هتل را انتخاب کنید"
          
      .span4
        .field
          = f.label 'نام کشور'
          = f.select :country_id, options_for_select(Country.all.collect{ |u| [u.title_fa, u.id] }), prompt: "کشور را نتخاب کنید"
          
        .field
          = f.label 'نام شهر'
          = f.select :city_id, options_for_select(City.all.collect{ |u| [u.title_fa, u.id] }), prompt: "شهر را انتخاب کنید"
          
      .span4
        .field
          = f.label 'تاریخ اعتبار از'
          = f.text_field :validate_date_from_fa, :class => "fa_date"
        .field
          = f.label 'الی'
          = f.text_field :validate_date_until_fa, :class => "fa_date"
        .field
          = f.label 'بزودی'
          = f.check_box :coming_soon
    .span12
      .field.editor
        = f.label 'متن فارسی'
        = f.text_area :description_fa, :class => "ckeditor"
      .field.editor
        = f.label 'متن انگلیسی'
        = f.text_area :description_en, :class => "ckeditor"
      .field.editor
        = f.label 'متن عربی'
        = f.text_area :description_ar, :class => "ckeditor"
      .actions
        = f.submit 'ثبت', :class => "btn"
  
:javascript
  $('.fa_date').datepicker()
