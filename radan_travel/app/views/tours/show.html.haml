.margin3
  %h1.title-tours{:class => I18n.locale}=  @tour.title  
   
  - if is_admin?
    = link_to 'ویرایش', edit_tour_path(@tour), :class => "btn btn-info" 
  .tour-details
    .col-xs-12        
      .col-xs-9        
        - if @tour.validate_date_from.present? && @tour.validate_date_until.present?
          %p{:class => I18n.locale}= JalaliDate.new(@tour.validate_date_from).strftime("%A %e %b %Y") + 'تا' + JalaliDate.new(@tour.validate_date_until).strftime("%A %e %b %Y")
        - elsif @tour.validate_date_from.present?
          %b= t('tour.validate_date_from')
          %p{:class => I18n.locale}= JalaliDate.new(@tour.validate_date_from).strftime("%A %e %b %Y")            
        - elsif   @tour.validate_date_until.present?
          %b= t('tour.validate_date_until')
          %p{:class => I18n.locale}= JalaliDate.new(@tour.validate_date_until).strftime("%A %e %b %Y")  
        %p
          %b قیمت
          = @tour.price
        - if @tour.info.url.present?
          = link_to @tour.info.url, :target => "blank" do
            %i.btn.btn-warning= 'دریافت فایل '
          
        .clear-float    
        %h2{:class => I18n.locale}= t('tour.description')
        - if @tour.decription_image.present?
          = link_to  @tour.decription_image(:original), "data-lightbox" => "example-set", :class => "tour-img", :title => 'آژانس هواپیمایی رادان سیر_' + @tour.title do
            = image_tag @tour.decription_image(:medium), :class => "example-image", :title => 'آژانس هواپیمایی رادان سیر_' + @tour.title, :alt => 'آژانس هواپیمایی رادان سیر_' + @tour.title, :id => @tour.id
        =raw @tour.description 
      .col-xs-3
        -#
          %p
            - if @tour.city_id.present?          
              = @tour.city.country.title
              \/
              = @tour.city.title
          %p
            - if @tour.hotel_id.present?
              = @tour.hotel.title
          %p
            - if @tour.plane_id.present?
              = t('plane') + @tour.plane.title
              
            
        -#
          %p
          %b تاریخ اعتبار از
          = JalaliDate.new(@tour.validate_date_from)      
          %b الی
          = JalaliDate.new(@tour.validate_date_until)
        
        
        %p
          %h2{:class => I18n.locale}= t('tour.itinerary')
          / Large modal
          %button.btn.btn-primary{"data-target" => ".bs-example-modal-lg", "data-toggle" => "modal", :type => "button"}= t('tour.show')
          .modal.fade.bs-example-modal-lg{"aria-hidden" => "true", "aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1"}
            .modal-dialog.modal-lg
              .modal-content
                .modal-header
                  %button.close{"data-dismiss" => "modal", :type => "button"}
                    %span{"aria-hidden" => "true"} ×
                    %span.sr-only= t('close')
                  %h4.modal-title= t('tour.itinerary')
                .modal-body
                  =raw @tour.itinerary
                .modal-footer
                  %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}= t('close')
          
        %p
          %h2{:class => I18n.locale}= t('tour.documents')
          
          / Button trigger modal
          %button.btn.btn-primary{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"}
            = t('tour.show')
          / Modal
          #myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
            .modal-dialog
              .modal-content
                .modal-header
                  %button.close{"data-dismiss" => "modal", :type => "button"}
                    %span{"aria-hidden" => "true"} ×
                    %span.sr-only= t('close')
                  %h4#myModalLabel.modal-title= t('tour.documents')
                .modal-body
                  =raw @tour.documents
                .modal-footer
                  %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}= t('close')
                  
      
      
    .col-xs-12
      .col-xs-7        
        = render 'shared/slider_tumbnail', :model => @tour
      .col-xs-5
        .tour-comments
          %h3{:class => I18n.locale}= t('tour_comment.your-comment')
          = render 'tour_comments/form', :tour_comment => TourComment.new
      
        .show_comments
          - @tour.tour_comments.each do |comment|
            .well
              %b= comment.user_name
              %i= JalaliDate.new(comment.created_at).strftime("%A %e %b %Y")
              %p= comment.text
                   
         
        
