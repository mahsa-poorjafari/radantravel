                            - country.tours.each do |country_tour|
                              - if country_tour.continent_category_id.present? && country_tour.continent_category.title_fa  == 'نوروز 94'
                                - @coutry_tour = @coutry_tour + 1
                          - if @coutry_tour > 0
                            %li
                              .continent-group.tour-group.filter{ "data-filter" => '.country-'+country.id.to_s}      
                                %h3.en.country-title-tab{:class => I18n.locale}
                                  - @norouz = ContinentCategory.find_by_title_fa('نوروز 94')
                                  =link_to country.title, show_fun_tours_for_country_countries_path(:country_id => country.id, :continent_id => @norouz.id)
                       
