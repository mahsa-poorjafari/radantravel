- if I18n.locale == :en
  .col-xs-2.pull-left{:style => "text-align:center; margin-bottom:4%", :class => I18n.locale}     
    = link_to Tour do
      .continent{:class => ('active' if current_page?(Tour))}
        %span.location{:style => "left:0"}= image_tag 'w.png'
        %span.country-title-tab= t('show-all-tours')
    %ul.tour-groups
      - ContinentCategory.offset(5).order("set_order asc").each do |continent| 
        %li.tour-group-item
          = link_to continent do
            .continent.tour-group{:class => ('active' if current_page?(continent))}              
              %h4.en.country-title-tab{ :class => ('white blink' if continent.title_fa == 'نوروز 94')}= continent.title
              - if   continent.title_fa == 'تورهای تفریحی' ||  continent.title_fa == 'نوروز 94'
                %span.location= image_tag 'arrow-bullet-left.png'
          - if  continent.title_fa == 'تورهای تفریحی'              
            %ul.tour-groups-sub-menu{:class => I18n.locale}
              - ContinentCategory.all.limit(5).each do |continent|  
                %li{:id => ('asia-submenu' if  continent.title_fa == 'آسیا')}
                  .continent-group.tour-group
                    %h3.en.country-title-tab
                      = link_to continent.title, continent
                    - if  continent.title_fa == 'آسیا'
                      %span.location= image_tag 'arrow-bullet-left.png'
                  .clear-float
                  - if  continent.title_fa == 'آسیا'
                    %ul.continent-sub-menu{:class => I18n.locale}
                      - continent.countries.each do |country|
                        - unless country.title_fa == 'ایران'&& country.continent_category.title_fa != 'آسیا'
                          - if country.tours.present?
                            - @coutry_tour = 0
                            - country.tours.each do |country_tour|
                              - if country_tour.continent_category_id.present? && country_tour.continent_category.title_fa  == 'تورهای تفریحی' 
                                - @coutry_tour = @coutry_tour + 1
                          - if @coutry_tour > 0
                            %li
                              .continent-group.tour-group.filter{ "data-filter" => '.country-'+country.id.to_s}      
                                %h3.en.country-title-tab{:class => I18n.locale}
                                  - @fun = ContinentCategory.find_by_title_fa('تورهای تفریحی' )
                                  =link_to country.title, show_fun_tours_for_country_countries_path(:country_id => country.id, :continent_id => @fun.id)
          - elsif continent.title_fa == 'نوروز 94'
            %ul.tour-groups-sub-menu{:class => I18n.locale}
              - ContinentCategory.all.limit(5).each do |continent|  
                %li{:id => ('asia-submenu' if  continent.title_fa == 'آسیا')}
                  .continent-group.tour-group
                    %h3.en.country-title-tab
                      = link_to continent.title, continent
                    - if  continent.title_fa == 'آسیا'
                      %span.location= image_tag 'arrow-bullet-left.png'
                  .clear-float
                  - if  continent.title_fa == 'آسیا'
                    %ul.continent-sub-menu{:class => I18n.locale}
                      - continent.countries.each do |country|
                        - unless country.title_fa == 'ایران' && country.continent_category.title_fa != 'آسیا'
                          - if country.tours.present?
