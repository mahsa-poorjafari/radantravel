= form_for @hotel do |f|
  - if @hotel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hotel.errors.count, "error")} prohibited this hotel from being saved:"
      %ul
        - @hotel.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title_fa
    = f.text_field :title_fa
  .field
    = f.label :title_en
    = f.text_field :title_en
  .field
    = f.label :title_ar
    = f.text_field :title_ar
  .field
    = f.label :text_fa
    = f.text_area :text_fa
  .field
    = f.label :text_en
    = f.text_area :text_en
  .field
    = f.label :text_ar
    = f.text_area :text_ar
  .field
    = f.label :city_id
    = f.number_field :city_id
  .field
    = f.label :hotel_grade
    = f.number_field :hotel_grade
  .field
    = f.label :hotel_facilities
    = f.text_field :hotel_facilities
  .actions
    = f.submit 'Save'
