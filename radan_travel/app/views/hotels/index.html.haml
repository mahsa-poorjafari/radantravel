.margin3  
  %h1{:title => "آژانس_هواپیمایی_رادان_سیر", :class => I18n.locale}=' لیست هتلها'
  -if is_admin?
    = link_to 'معرفی هتل جدید', new_hotel_path, :class => "btn btn-success", :title => "آژانس_هواپیمایی_رادان_سیر"  
    .col-xs-12      
      .filter.continent-cat.set-center{"data-filter" => "all" }= t('show-all-tours')
    .col-xs-12
      .col-xs-6
        .continent-cat.set-center= t('local-hotels')
        - City.all.each do |city|
          - if city.country_id.present?
            - if city.country.title_fa == 'ایران'
              .filter.city-cat{"data-filter" => ".category-"+ city.country.id.to_s }= city.title
      .col-xs-6
        .continent-cat= t('foreign-hotels')
        - City.all.each do |city|
          - if city.country_id.present?
            - unless city.country.title_fa == 'ایران'
              .filter.city-cat{"data-filter" => ".category-"+ city.country.id.to_s }= city.title
  .show-tours.col-xs-12.set-center#Container
    - @hotels.each do |hotel|
      .tours-index.mix{:class => "category-" + hotel.city.country.id.to_s, "data-my-order" => hotel.id}
        = link_to hotel, :class => "tour-box", :title => "آژانس_هواپیمایی_رادان_سیر" do
          %h5.tour-title{:id => "hotel-"+hotel.id.to_s}= hotel.title          
          - if hotel.photos.present?
            .tour-sample-image= image_tag hotel.photos.first.image(:medium), :id => "tour-sample-image-" + hotel.photos.first.id.to_s, :title => "آژانس_هواپیمایی_رادان_سیر", :alt => "آژانس_هواپیمایی_رادان_سیر"
          .clear-float  
          %p
            %span=image_tag 'Star.png'
            - if hotel.class_hotel_id.present?
              %b= hotel.class_hotel.title
          %p= hotel.city.country.title + ' , ' + hotel.city.title
        -if is_admin?
          .admin-btn-tour
            = link_to 'مشاهده', hotel, :class => "btn btn-warning"   , :title => "آژانس_هواپیمایی_رادان_سیر"    
            = link_to 'ویرایش', edit_hotel_path(hotel), :class => "btn btn-info", :title => "آژانس_هواپیمایی_رادان_سیر"
            = link_to 'حذف', hotel, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger", :title => "آژانس_هواپیمایی_رادان_سیر"
:javascript
  $(function(){
    $('#Container').mixItUp();  
  });
       
