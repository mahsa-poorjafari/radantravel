= form_for @customer do |f|
  - if @customer.errors.any?
    .alert.alert-danger{:role => "alert"}
      %ul
        - @customer.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :address
    = f.text_field :address
  .actions
    = f.submit 'Save'
