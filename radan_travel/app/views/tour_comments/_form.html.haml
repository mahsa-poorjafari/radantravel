= form_for tour_comment do |f|
  - if tour_comment.errors.any?
    #error_explanation
      
      %ul
        - tour_comment.full_messages.each do |attr, msg|
          %li= msg
  .col-xs-12
    .col-xs-4
    .col-xs-8
      .form-group
        = f.label t('tour_comment.user-name'), :class => "control-label"
        = f.text_field :user_name, :class => "form-control"
      .form-group        
        = f.hidden_field :tour_id, :value => @tour.id
    .col-xs-12
      .form-group
        = f.label t('tour_comment.text'), :class => "control-label"
      .clear-float      
        = f.text_area :text, :class => "form-control"
      .form-group
        = f.submit 'ثبت', :class => "btn btn-primary"
    
